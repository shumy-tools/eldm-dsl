    '<block>'
  END
;

VariableDef:
  'let' (name=LID (':' type=StructDef)? '=' right=Expression)
    | (mut?='mut' name=LID (':' type=StructDef)? ('=' right=Expression)?) //TODO: check-error-if (mut == true && type === null && right === null)
;

OperationCall:
  async?='async'? (isGet?='get' | 'set') ref=[Operation|Path] param=MapExpression
;


Expression:
  '<exp>'
;

MapExpression:
  '{test:10}'
;
  
// ------------------------------------------------------------------------------------------------------------------------------
// Type Definitions
// ------------------------------------------------------------------------------------------------------------------------------
Definition: //TODO: create Java annotations to define these
  TypeDef | EnumDef | ExternalDef
;

  TypeDef:
    'typedef' name=LID (parser=('pattern' | 'mask' ) pattern=STRING)? 'return' code=STRING
      | name=FID type=MapDef
  ;
  
  EnumDef:
    'enum' name=UID type=MapDef ':'
    BEGIN
      (defs+=EnumItemDef)+ //TODO: check-if MapLiteral is-assignable-to MapDef of EnumDef
    END
  ;
  
    EnumItemDef:
      key=UID value=MapLiteral
    ;

LambdaDef:
  '#(' param=StructDef ('->' result=StructDef)? ')'
;

StructDef: {ValueDef}
  NativeDef
  | ListDef
  | MapDef
  | xdef=[Definition]
;

  MapDef: {MapDef}
    '{' (defs+=KeyDef (',' defs+=KeyDef)*)? '}'
  ;
  
    KeyDef:
      name=LID ((opt?='?'? ':' type=StructDef) | ('=' value=Literal))
    ;
  
  ListDef: {ListDef}
    '..' type=StructDef
  ;
  
  NativeDef:
    'any' | 'bool' | 'str' | 'int' | 'flt' | 'path'
  ;

// ------------------------------------------------------------------------------------------------------------------------------
// Literals
// ------------------------------------------------------------------------------------------------------------------------------
Literal:
  NullLiteral
  | BoolLiteral
  | StrLiteral
  | IntLiteral
  | FltLiteral
  | ListLiteral
  | MapLiteral
  | EnumLiteral
  | PatternLiteral
;

  NullLiteral: {NullLiteral} 'null';
  BoolLiteral: {BoolLiteral} ('false' | isTrue?='true');
